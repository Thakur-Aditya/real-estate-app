model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String @unique
  password String 
  avatar String? //"?" <- it signifies that this can be empty.
  createdAt DateTime @default(now())
  post Post[]
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String 
  price Int 
  image String 
  address String 
  bathroom Int 
  bedroom Int 
  latitude String 
  longitude String 
  city String 
  type Type
  property Property
  user User @relation(fields:[userId], references: [id])
  userId String @db.ObjectId
  createdAt DateTime @default(now())
}

enum Type{
  buy
  rent
}

enum Property{
  apartment
  house
  condo
  land
}



